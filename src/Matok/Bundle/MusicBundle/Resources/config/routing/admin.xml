<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">

    <!-- artists -->
    <route id="matok_artist_list" path="/artist">
        <default key="_controller">MusicBundle:Artist:list</default>
    </route>

    <route id="matok_artist_add" path="/artist/add">
        <default key="_controller">MusicBundle:Artist:add</default>
    </route>

    <route id="matok_artist_remove" path="/artist/{id}/remove">
        <default key="_controller">MusicBundle:Artist:remove</default>
    </route>

    <!-- albums -->
    <route id="matok_album_list" path="/album">
        <default key="_controller">MusicBundle:Album:list</default>
    </route>

    <route id="matok_album_add" path="/album/add">
        <default key="_controller">MusicBundle:Album:add</default>
    </route>

</routes>
